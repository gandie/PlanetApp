#:kivy 1.0.9

<Planet>:
    size: 10, 10
    canvas:
        Color:
            rgb: self.colour
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'sun.png'

<SettingsButton>
    on_press: app.open_settings()

<PlanetGameLayout>
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'
    Slider:
        min:1
        max:10
        #step:1
        orientation:'vertical'
        pos_hint:{'x':-.8,'y':0}
        size_hint:(.05,1)
        #padding:100
        value:1
        on_value: root.children[2].zoom = self.value;